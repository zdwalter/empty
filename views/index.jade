  .container-fluid
    .row-fluid
      .span3
        .well.sidebar-nav
          #APIList
            script#APIList(type="text/html")
              ul.nav.nav-list
                li.nav-header API List
                | {{#examples}}
                li
                  a(href="#api/{{name}}") {{name}}
                | {{/examples}}
      .span9
        #API
          script#API(type="text/html")
            h2 {{name}}
            .alert.alert-info {{url}}
            {{#method}}
            .alert.alert-success method: {{method}}
            {{/method}}
            {{^method}}
            .alert.alert-error method: Missing!!! Please update the document
            {{/method}}
            .alert.alert-success example link: 
                a(href="{{link}}") {{link}} 
            p {{description}}
            h3 Input
            form#input.well.form-horizontal
              | {{#input}}
              .control-group
                label.control-label {{name}}
                .controls.form-inline
                  {{^required}}
                  input.input-xlarge(type="text", name="{{name}}", value="{{value}}") 
                  {{/required}}
                  {{#required}}
                  input.input-xlarge(type="text", name="{{name}}", value="{{value}}", required) 
                  |  
                  span.label.label-important required
                  {{/required}}
                  p.help-block {{comment}}
              | {{/input}}
              .form-actions
                #run.btn.btn-large.btn-primary Try
  
            #output
              h3 Output
              pre {{output}}
  
